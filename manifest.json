{
  "manifest_version": 2,

  "name": "Tinning",
  "description": "Tinning all the tabs from your Google Chrome.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["tinning.js", "eventPage.js"],
    "persistent": false
  },
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "bookmarks"
  ],
  "content_scripts":[
    {
       "matches":[
          "*://*/*"
       ],
       "js":[
          "tinning.js"
       ],
       "run_at": "document_start"
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}