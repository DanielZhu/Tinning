{
  "manifest_version": 2,

  "name": "Tinning: Store and Manage your tabs easily",
  "short_name": "Tinning",
  "description": "Tinning can easily manage your tabs.",
  "version": "1.0.0",

  "browser_action": {
    "default_icon": "res/tinning_logo_19.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["storage.js", "tinning.js", "eventPage.js"],
    "persistent": false
  },
  "icons": { 
    "16": "res/tinning_logo_16.png",
    "32": "res/tinning_logo_32.png", 
    "48": "res/tinning_logo_48.png" 
  },
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "bookmarks",
    "<all_urls>"
  ],
  "content_scripts":[
    {
       "matches":[
          "*://*/*"
       ],
       "js":[
          "tinning.js"
       ],
       "run_at": "document_start"
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}